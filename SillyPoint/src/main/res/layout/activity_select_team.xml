<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lords1"
    android:id="@+id/layout"
    tools:context="com.example.emad.splashscreen.SelectTeam">


    <EditText
        android:layout_width="328dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/teamsquad"
        android:layout_gravity="center_horizontal"
        android:background="@color/Light_fieldgreen"
        android:textSize="30dp"
        android:textStyle="bold"
        android:bottomRightRadius="15dp"
        android:bottomLeftRadius="15dp"
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp"
        android:textAlignment="center"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorPrimaryDark"
        android:maxLines="2"
        android:lines="1"
        android:hint="Enter Your Team Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select your Team"

        android:bottomRightRadius="15dp"
        android:bottomLeftRadius="15dp"
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp"

        android:id="@+id/Suggestion"
        android:layout_gravity="center_horizontal"
        android:background="@color/Light_fieldgreen"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="420dp"

        android:paddingTop="6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="1"

        android:background="@color/colorAccent">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_above="@+id/Players"
            android:layout_toRightOf="@+id/team1"
            android:id="@+id/team2"
            android:text="Team 2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/darkgreen"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Team 1"
            android:textSize="20sp"
            android:id="@+id/team1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:background="@color/darkgreen"

            />

        <ListView
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            android:layout_width="150dp"
            android:layout_height="349dp"
            android:id="@+id/Players"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:choiceMode="singleChoice"
            android:background="@color/colorAccent"
            android:layout_below="@+id/team1"
            android:layout_weight="0.16" />


        <ListView
            android:layout_width="150dp"
            android:layout_height="349dp"
            android:fadeScrollbars="false"
            android:layout_marginLeft="20dp"
            android:choiceMode="singleChoice"
            android:background="@color/colorAccent"
            android:layout_toRightOf="@+id/Players"
            android:layout_below="@+id/team2"
            android:layout_weight="0.16"
            android:id="@+id/Team2Players"/>




    </RelativeLayout>


    <TextView
        android:id="@+id/budget"
        android:layout_marginTop="30dp"
        android:background="@drawable/for_ai_team"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="100" />

</LinearLayout>
