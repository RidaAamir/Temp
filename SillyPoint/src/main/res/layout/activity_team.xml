<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emad.splashscreen.Team"
    android:background="@drawable/lords1attempt">


    <TextView
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Names"
        android:id="@+id/teamnames"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_marginLeft="-25dp"
        android:background="@color/colorAccent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:maxLines="2" />

    <TextView
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User"
        android:id="@+id/UserName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_marginLeft="-25dp"
        android:background="@color/colorAccent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:maxLines="2" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:gravity="fill_horizontal|right"
        android:background="@color/colorAccent">

        <ImageView
            android:src="@drawable/allrounders"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/allrounder"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.10" />

        <ImageView
            android:src="@drawable/batsmen"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/batsmen"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.10" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="5dp"
        android:paddingBottom="-30dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:gravity="fill_horizontal|right"
        android:background="@color/colorAccent">


        <ImageView
            android:src="@drawable/bowlers"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/bowlers"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.10" />

        <ImageView
            android:src="@drawable/wicketkeepers"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/wicketkeeper"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.10" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:gravity="fill_horizontal|right"
        android:background="@color/colorAccent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Take Me Back"
        android:drawableLeft="@drawable/return1"
        android:background="@color/colorPrimary"
        android:textColor="#fbf8f8"
        android:id="@+id/back"
        android:onClick="GoBack" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/confirmteam"
            android:text="My Formation"
            android:id="@+id/forward"
            android:background="@color/colorPrimary"
            android:textColor="#fbf8f8"
            android:layout_marginLeft="10dp"
            android:onClick="GoForward"
            android:layout_weight="0.66" />
    </LinearLayout>>

</LinearLayout>
