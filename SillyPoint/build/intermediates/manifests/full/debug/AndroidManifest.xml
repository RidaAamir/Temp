<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emad.splashscreen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:banner="@drawable/sp4"
        android:icon="@mipmap/sp4"
        android:label="@string/app_name"
        android:logo="@drawable/sp4"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.emad.splashscreen.SplashScreen" >
            <intent-filter android:label=" " >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.emad.splashscreen.MainActivity"
            android:label="Silly Point!" />
        <activity
            android:name="com.example.emad.splashscreen.WelcomeMenu"
            android:label="@string/title_activity_welcome_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.emad.splashscreen.SignupActivity" />
        <activity android:name="com.example.emad.splashscreen.Team" />
        <activity android:name="com.example.emad.splashscreen.MyFormation" />
        <activity android:name="com.example.emad.splashscreen.TeamPlayers" />
        <activity android:name="com.example.emad.splashscreen.SelectTeam" />
        <activity android:name="com.example.emad.splashscreen.DisplayTeam" />
        <activity android:name="com.example.emad.splashscreen.ViewTeam_score" />
        <activity android:name="com.example.emad.splashscreen.modify_team" />
        <activity android:name="com.example.emad.splashscreen.list_box" />
        <activity android:name="com.example.emad.splashscreen.SplashLoading" />
        <activity android:name="com.example.emad.splashscreen.playerAdapter" />
        <activity android:name="com.example.emad.splashscreen.AI_calculate" />
        <activity android:name="com.example.emad.splashscreen.AI_or_selectTeam" />
        <activity android:name="com.example.emad.splashscreen.Created_Team" >
        </activity>
    </application>

</manifest>